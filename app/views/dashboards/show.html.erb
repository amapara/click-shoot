<style>

  #parent {
    display: flex;
    justify-content: center;
    align-items: space-between;
    padding: 0;
    margin: 0;
  }

  #left {
   display: inline-block;
   float: left;
   text-align: center;
   margin-right: 5.5%;
   margin-left: 15px;
   margin-top: 1.5px;
   padding: 8px;
  }

  #right {
   display: inline-block;
   float: right;
   text-align: center;
   margin-left: 5.5%;
   margin-right: 15px;
   margin-top: 1.5px;
  }
</style>


<div id="parent">

<div class="border border-light shadow p-3 mb-5 bg-white rounded" id="left">
  <h2 style="text-decoration: underline"> Bookings for your camera </h2>
  <br>
<table class="table">
  <thead>
    <tr>
      <th scope="col">Model</th>
      <th scope="col">Lease Dates</th>
      <th scope="col">Tenant</th>
    </tr>
  </thead>
  <tbody>
        <% @user.sale_items.each do |sale_item| %>
              <% sale_item.bookings.each do |booking| %>
               <tr>
                  <td> <%= sale_item.model.capitalize %> </td>
                  <td> <%= booking.start_date.strftime("%A, %b %d") %> <%= "---" %> <%= booking.end_date.strftime("%A, %b %d") %> </td>
                  <td> <%= link_to("#{booking.user.first_name}", sale_item_booking_path(sale_item, booking)) %></td>
              </tr>
              <% end %>
            <% end %>
  </tbody>
</table>

</div>

  <div class="border border-light shadow p-3 mb-5 bg-white rounded" id="right">
    <h2 style="text-decoration: underline"> Your Rentals: </h2>
  <br>

<table class="table">
  <thead>
    <tr>
      <th scope="col">Model</th>
      <th scope="col">City</th>
      <th scope="col">Lease Dates</th>
      <th scope="col">Owner</th>
    </tr>
  </thead>
  <tbody>

<% @user.bookings.each do |booking| %>
            <tr>
            <td> <%= booking.sale_item.model %></td>
            <td> <%= booking.sale_item.city %> </td>
            <td> <%= booking.start_date.strftime("%A, %b %d") %> <%= "---" %> <%= booking.end_date.strftime("%A, %b %d") %> </td>
            <td> <%= link_to("#{booking.sale_item.user.first_name}", sale_item_booking_path(booking.sale_item, booking)) %> </td>
            </tr>
        <% end %>
  </tbody>
</table>
  </div>
</div>





