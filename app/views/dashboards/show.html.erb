<h1><strong>Hello <%= @user.first_name %>,</strong></h1>
<br>
<br>


<h2 class= "align-items"> Your upcoming bookings: </h2>
<br>

<ul style="text-decoration: none">
    <% @user.bookings.each do |booking| %>
    <li style="text-decoration: none">
      <%= link_to("Message owner", messages_show_path) + booking.start_date + "---" + booking.end_date %>
    </li>
  <% end %>
<br>

<br>
<h2 class="align-items"> My items bookings </h2>
<br>
<ul style="text-decoration: none">
  <% @user.sale_items.each do |sale_item| %>
    <% sale_item.bookings.each do |booking| %>
      <li style="text-decoration: none">
        <%= link_to("Message renter", messages_show_path) + booking.start_date + "---" + booking.end_date %>
      </li>
    <% end %>
  <% end %>
</ul>


